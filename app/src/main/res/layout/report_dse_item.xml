<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_gravity="center"
    android:orientation="vertical"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:contentPadding="5dp"
        app:cardCornerRadius="5dp"
        android:layout_centerInParent="true"

        >

        <LinearLayout
            android:layout_width="387dp"
            android:layout_height="213dp"
            android:orientation="vertical"
            android:background="#ffffff"
            android:id="@+id/layout_color">

            <TextView
                android:id="@+id/report_dse_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:focusable="true"
                android:hint="@string/hint_name"
                android:textColor="#17202a"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/report_dse_customerMet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="Customer met"

                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/report_dse_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="pending"

                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/report_dse_lost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="Lost"

                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/report_dse_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:hint="Sold"

                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/customer_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="View Customer"

                    />

                <Button
                    android:id="@+id/button_safe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Safe"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5f6a6a"
        android:layout_marginTop="4dp"
        />

</LinearLayout>
