<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:contentPadding="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="6"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="DSM"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp" />

            <Button
                android:id="@+id/view_profile"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="2"
                android:background="@drawable/profile_icon"

                />

            <Button
                android:id="@+id/view_employee"
                android:layout_width="97dp"
                android:layout_height="62dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/group_icon" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Customer met"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:paddingLeft="7dp"
                android:visibility="gone"
                />

            <TextView

                android:id="@+id/customerMet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="10"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/label_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Pending"
                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="10"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/label_lost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Lost"
                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/lost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:hint="10"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/label_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Sold"
                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:hint="10"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/label_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Target Given"
                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:textColor="#17202a"
                android:textSize="15dp"
                android:hint="10"
                android:visibility="gone"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Safe"
                android:background="@drawable/default_button"
                android:visibility="gone"
                android:textColor="@color/white"
                />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>











