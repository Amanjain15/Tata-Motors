<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_gravity="center"
    android:orientation="vertical"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="5dp"
        app:cardCornerRadius="5dp"
        android:layout_centerInParent="true"
        android:background="#ecf0f1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/report_dsm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:textColor="#17202a"
                android:textSize="18dp"
                android:hint="@string/hint_name"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/report_dsm_customerMet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Customer met"
                android:paddingLeft="7dp"
                android:textColor="#17202a"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/report_dsm_pending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="pending"
                android:paddingLeft="7dp"
                android:textColor="#17202a"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/report_dsm_lost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lost"
                android:paddingLeft="7dp"
                android:textColor="#17202a"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/report_dsm_sold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sold"
                android:paddingLeft="7dp"
                android:textColor="#17202a"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="15dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="View DSE"
                android:id="@+id/dse_view"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5f6a6a"
        android:layout_marginTop="4dp"
        />

</LinearLayout>